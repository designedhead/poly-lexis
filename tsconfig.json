{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "noEmit": false,
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
