{
  "name": "poly-lexis",
  "version": "0.8.0",
  "description": "A powerful CLI and library for managing i18n translations with validation, auto-translation, and TypeScript type generation",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "poly-lexis": "dist/cli/translations.js"
  },
  "scripts": {
    "build": "tsup && node dist/scripts/generate-schema.js && mkdir -p dist/translations/core && cp src/translations/core/translations-config.schema.json dist/translations/core/",
    "dev": "tsc --noEmit --watch",
    "prepublishOnly": "npm run build",
    "lint": "biome check",
    "format": "biome format --write .",
    "check-types": "tsc --noEmit",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "verify-translations": "node dist/scripts/verify-translations.js",
    "generate-schema": "node dist/scripts/generate-schema.js",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "translations",
    "localization",
    "l10n",
    "google-translate",
    "typescript",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/designedhead/poly-lexis"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/cli": "^2.29.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "jest": "^30.2.0",
    "lefthook": "^2.0.12",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.0",
    "typescript": "^5"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.0.2",
    "dotenv": "^17.2.2"
  }
}
